<icecast>
  <location>SprontPi</location>
  <admin>admin@localhost</admin>

  <limits>
    <clients>100</clients>
    <sources>10</sources>
    <threadpool>5</threadpool>
    <queue-size>16384</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>2</source-timeout>
    <burst-size>4096</burst-size>
  </limits>

  <authentication>
    <source-password>CHANGEME</source-password>
    <relay-password>CHANGEME</relay-password>
    <admin-user>source</admin-user>
    <admin-password>CHANGEME</admin-password>
  </authentication>

  <listen-socket>
    <port>8000</port>
  </listen-socket>

  <!-- Keep /GND.mp3 "always alive": if rtl_airband disconnects, listeners fall back to /keepalive.mp3 -->
  <mount>
    <mount-name>/GND.mp3</mount-name>
    <fallback-mount>/keepalive.mp3</fallback-mount>
    <fallback-override>1</fallback-override>
  </mount>

  <!-- Staging mount for DMR testing -->
  <mount>
    <mount-name>/DMR.mp3</mount-name>
    <fallback-mount>/keepalive.mp3</fallback-mount>
    <fallback-override>1</fallback-override>
  </mount>

  <paths>
    <basedir>/usr/share/icecast2</basedir>
    <logdir>/var/log/icecast2</logdir>
    <webroot>/usr/share/icecast2/web</webroot>
    <adminroot>/usr/share/icecast2/admin</adminroot>
    <alias source="/" destination="/status.xsl"/>
  </paths>

  <logging>
    <accesslog>access.log</accesslog>
    <errorlog>error.log</errorlog>
    <loglevel>3</loglevel>
    <logsize>10000</logsize>
  </logging>

  <security>
    <chroot>0</chroot>
  </security>
</icecast>
